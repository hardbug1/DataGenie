# Application Settings
APP_NAME=DataGenie
APP_VERSION=0.1.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-generate-a-strong-one
JWT_SECRET_KEY=your-jwt-secret-key-here-make-it-very-strong-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-encryption-key-for-database-credentials

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MODEL_FALLBACK=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.0

# Implementation Mode Configuration
USE_REAL_IMPLEMENTATIONS=false  # Set to 'true' to use real implementations (database, LLM)
USE_LLM_ENGINE=false  # Set to 'true' to enable LLM-based analysis (deprecated, use USE_REAL_IMPLEMENTATIONS)
LLM_CACHE_TTL=3600    # LLM response cache TTL in seconds
LLM_MAX_RETRIES=2     # Maximum retry attempts for LLM calls
LLM_TIMEOUT=30        # LLM request timeout in seconds

# System Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/datagenie
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=datagenie
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_POOL_SIZE=5
DATABASE_POOL_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# File Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
TRUSTED_HOSTS=["localhost", "127.0.0.1"]
RATE_LIMIT_PER_MINUTE=100

# External Database Connections
# Add your external database configurations here
# EXTERNAL_DB_1_HOST=your-external-db-host
# EXTERNAL_DB_1_PORT=5432
# EXTERNAL_DB_1_NAME=your-external-db-name
# EXTERNAL_DB_1_USER=readonly-user
# EXTERNAL_DB_1_PASSWORD=readonly-password
# EXTERNAL_DB_1_TYPE=postgresql

# Development Settings
RELOAD=True
WORKERS=1
