from abc import ABC, abstractmethod

# âœ… ABSTRACTION: High-level policy defines interface
class IDataRepository(ABC):
    """High-level module defines what it needs."""
    
    @abstractmethod
    async def save_analysis(self, analysis: Analysis) -> str: ...
    
